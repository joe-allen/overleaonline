{% include "hero/hero.twig" with {
	count: post.meta('slider') ? post.meta('slider')|length : post.meta('hero_img')|length,
	slides: post.meta('slider') ? post.meta('slider') : post.meta('hero_img'),
	class: post.meta('hero_img') ? 'v-hero--sm' : '',
} %}

{% if post.meta('intro') %}
	{% include "intro/intro.twig" with {
		content: post.meta('intro'),
		heroHasSubtitle: false
	} %}
{% endif %}

{% include "content/content.twig" with {
	sidebar: false,
	content: post.meta('content'),
	author: Post(post.meta('author_board_member')),
	sponsors: post.meta('sponsor'),
	type: post.post_type
} %}

{# option: class: 'v-image-content--reverse' #}
{% include "image-content/image-content.twig" with {
	items: post.meta('ic'),
} %}

{% include "cta/cta.twig" with {
	title: post.meta('cta_type') == 'Random' ? post.meta('cta_text') : options,
	cta: post.meta('cta_type') == 'Random' ? post.meta('cta_link') : options,
	class: 'v-cta--bottom-overlap',
	type: post.meta('cta_type'),
} %}

{% include "form/form.twig" with {
	title:    'Contact Us',
	subtitle: 'We\'re all ears!',
	shortcode_contact: '[contact-form-7 id="5" title="Contact Form"]',
} %}

