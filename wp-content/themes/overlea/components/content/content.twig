{# @var string class plain text #}
<article class="v-content {{ class }}">
	<div class="container">
		<div class="v-content__inner">
			<div class="v-content__content">
				{{content}}

				{% if footnotes %}
					<div class="v-content__footnotes">
						{{footnotes}}
					</div>
				{% endif %}

				{% if sponsors %}
				<div class="v-content__meta">

					<span class="v-content__meta-item">Sponsors:</span>
					<ul class="v-content__meta-list v-content__meta-list--sponsors">
						{% for sponsor in sponsors %}
							{% if sponsor.sponsor_logo %}
								<li class="v-content__meta-item">
									{% if sponsor.sponsor_website %}
										<a href="{{sponsor.sponsor_website}}" data-elb="sponsor" data-elb-sponsor="name: {{sponsor.post_title}}" data-elbaction="click:page_view" target="_blank" rel="noopener nofollow">
											{% include 'img/img.twig' with {
												id: sponsor.sponsor_logo,
												class: 'v-content__sponsor'
											} %}
										</a>
									{% else %}
										{% include 'img/img.twig' with {
											id: sponsor.sponsor_logo,
											class: 'v-content__sponsor'
										} %}
									{% endif %}
								</li>
							{% else %}
								<li class="v-content__meta-item">
									{% if sponsor.sponsor_website %}
									<a href="{{sponsor.sponsor_website}}" target="_blank" rel="noopener nofollow">
										{{sponsor.primary_title ? sponsor.primary_title : sponsor.post_title}}
									</a>
									{% else %}
										{{sponsor.primary_title ? sponsor.primary_title : sponsor.post_title}}
									{% endif %}
								</li>
							{% endif %}
						{% endfor %}
					</ul>
				</div>
				{% endif %}
			</div>
			{% if sidebar %}
				<div class="v-content__sidebar">
					<div class="v-content__meta">
						<ul class="v-content__meta-list">
							{% if author[0] %}
								<li class="v-content__meta-item">
									<div>
										{% include 'img/img.twig' with {
											id: author[0].leader_headshot,
											class: 'v-content__author v-content__sponsor'
										} %}
									</div>
									<span>
										{% set auth_name = author[0].primary_title ? author[0].primary_title : author[0].post_title %}
										{% if not author[0].leader_retired %}
											<a href="mailto:{{author[0].leader_email}}?subject={{post.post_title}}">{{auth_name}}</a>
											<div><em>{{author[0].secondary_title}} {{author[0].leader_retired ? '(Retired)' : ''}}</em></div>
										{% else %}
											{{auth_name}}
										{% endif %}<br>
									</span>
								</li>
							{% endif %}

							<!-- convert dates for 'add-to-calendar' plugin -->
							{% if event_start_date %}
								{% set start_date = function('explode', '/', event_start_date) %}
								{% set start_year = function('explode', ' ', start_date[2]) %}
								{% set start_time = event_start_date|date('H:i') %}
							{% endif %}
							{% if event_end_date %}
								{% set end_date = function('explode', '/', event_end_date) %}
								{% set end_year = function('explode', ' ', end_date[2]) %}
								{% set end_time = event_end_date|date('H:i') %}
							{% endif %}

							{% if event_show_dates %}

								{% if event_start_date %}
									<li class="v-content__meta-item"><span>Starts:</span><br><span>{{start_date[1] ~ '/' ~ start_date[0] ~ '/' ~ start_date[2]}}</span></li>
								{% endif %}
								{% if event_end_date %}
									<li class="v-content__meta-item"><span>Ends:</span><br><span>{{end_date[1] ~ '/' ~ end_date[0] ~ '/' ~ end_date[2]}}</span></li>
								{% endif %}

								{% if event_subject_to_change %}
								<li class="v-content__meta-item"><strong>Date subject to change</strong></li>
								{% endif %}

								{% if event_start_date %}
								<li class="v-content__meta-item">
									<span>
										{% include 'add-to-calendar/add-to-calendar.twig' with {
											name: post.title,
											start_date: start_year[0] ~ '-' ~ start_date[1] ~ '-' ~ start_date[0],
											end_date: end_date ? end_year[0] ~ '-' ~ end_date[1] ~ '-' ~ end_date[0] : start_year[0] ~ '-' ~ start_date[1] ~ '-' ~ start_date[0],
											start_time: start_time ? start_time : '00:00',
											end_time: end_time ? end_time : '21:59',
											location: post.meta('Google Maps_text') ? post.meta('Google Maps_text') : 'Somewhere over the rainbow',
											label: 'Add to Calendar',
											description: 'Website: '~post.link
										} %}
									</span>
								</li>
								{% endif %}
							{% endif %}

							{% if post.meta('Google Maps_text') %}
								<li class="v-content__meta-item"><span>Location:</span><br>
									<span>
										<a href="{{post.meta('Google Maps_external_url')}}" target="{{post.meta('Google Maps_new_tab') ? '_blank' : ''}}">{{post.meta('Google Maps_text')}}</a>
									</span>
								</li>
							{% endif %}

							{% if post.meta('Zoom_text') %}
								<li class="v-content__meta-item"><span>Virtual Link:</span><br>
									<span>
										<a href="{{post.meta('Zoom_external_url')}}" target="{{post.meta('Zoom_new_tab') ? '_blank' : ''}}">{{post.meta('Zoom_text')}}</a>
									</span>
								</li>
							{% endif %}

							{% if post.terms %}
								<!-- <li class="v-content__meta-item">
									<span>Tags:</span><br>
									<span>
										{% for tag in post.terms %}
											{% if tag.name != 'Uncategorized' %}
												<span class="v-content__meta-tag-link" href="{{tag.link}}">{{tag.name}}</span>{% if loop.length != loop.index %},{% endif %}
											{% endif %}
										{% endfor %}
									</span>
								</li> -->
							{% endif %}

							{% if post.post_modified != post.post_date %}
								<li class="v-content__meta-item"><span>Updated:</span><br><span>{{post.post_modified|date("m/d/Y", "America/New_York")}}</span></li>
							{% else %}
								<li class="v-content__meta-item"><span>Published:</span><br><span>{{post.post_date|date("m/d/Y", "America/New_York")}}</span></li>
							{% endif %}
						</ul>
						<span class="v-content__meta-item">Share:</span>
						<ul class="v-content__meta-list v-content__meta-list--social">
							<li class="v-content__meta-item v-content__social">
								<a href="http://www.facebook.com/share.php?u={{post.link}}" class="v-content__social-link"  target="_blank" rel="noopener" aria-label="facebook - opens in a new tab">
									<span class="sr-only">facebook</span>
									<svg class="v-content__social-icon v-icon" role="img" aria-label="facebook icon">
										<use xlink:href="{{theme.link}}/img/icons.svg#v-icon-facebook" />
									</svg>
								</a>
							</li>
							<li class="v-content__meta-item v-content__social">
								<a href="https://twitter.com/intent/tweet?url={{post.link}}"  class="v-content__social-link"  target="_blank" rel="noopener" aria-label="twitter - opens in a new tab">
									<span class="sr-only">Twitter</span>
									<svg class="v-content__social-icon v-icon" role="img" aria-label="twitter icon">
										<use xlink:href="{{theme.link}}/img/icons.svg#v-icon-twitter" />
									</svg>
								</a>
							</li>
							<li class="v-content__meta-item v-content__social v-content__social--share">
								<a class="v-content__social-link" href="#!" aria-label="share link">
									<span class="sr-only">Share</span>
									<svg class="v-content__social-icon v-icon" role="img" aria-label="share icon">
										<use xlink:href="{{theme.link}}/img/icons.svg#v-icon-share" />
									</svg>
								</a>
							</li>
						</ul>
					</div>
				</div>
			{% endif %}
	</div>
</article>
