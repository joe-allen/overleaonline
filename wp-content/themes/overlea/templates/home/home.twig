{% include "hero/hero.twig" with {
	count: post.meta('slider') ? post.meta('slider')|length : post.meta('hero_img')|length,
	slides: post.meta('slider') ? post.meta('slider') : post.meta('hero_img'),
	class: post.meta('hero_img') ? 'v-hero--sm' : '',
} %}

{% if post.meta('intro') %}
	{% include "intro/intro.twig" with {
		content: post.meta('intro'),
		heroHasSubtitle: false
	} %}
{% endif %}

{% include "recent-news/recent-news.twig" with {
	items: posts,
} %}

{% include "pagination/pagination.twig" with {
	pagination: posts.pagination
} %}

{% include "cta/cta.twig" with {
	title: options,
	cta: options,
	class: 'v-cta--bottom-overlap',
	type: 'Newsletter',
} %}

{% include "form/form.twig" with {
	title:    'Contact Us',
	subtitle: 'We\'re all ears!',
	shortcode_contact: '[contact-form-7 id="5" title="Contact Form"]',
} %}

