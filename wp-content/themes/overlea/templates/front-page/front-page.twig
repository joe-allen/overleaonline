{% include "hero/hero.twig" with {
	count: post.meta('slider')|length,
	slides: post.meta('slider')
} %}

{% include "recent-news/recent-news.twig" with {
	count: posts|length,
	items: posts,
	title:    options.news_title,
	subtitle: options.news_subtitle,
	cta: options.news_link
} %}

{% include "cta/cta.twig" with {
	title: post.meta('cta_type') == 'Random' ? post.meta('cta_text') : options,
	cta: post.meta('cta_type') == 'Random' ? post.meta('cta_link') : options,
	type: post.meta('cta_type'),
	shortcode_newsletter: post.meta('cta_type') == 'Newsletter' ? '[contact-form-7 id="477" title="Newsletter Signup"]' : '',
} %}

{% include "sponsors/sponsors.twig" with {
	title: post.meta('sponsor_title'),
	items: post.meta('sponsor'),
	subtitle: post.meta('sponsor_text'),
	cta: false
} %}

{% include "image-content/image-content.twig" with {
	class: 'v-image-content--reverse',
	items: post.meta('ic'),
} %}

{% include "form/form.twig" with {
	title:    options.contact_form_title,
	subtitle: options.contact_form_text,
	shortcode_contact: '[contact-form-7 id="5" title="Contact Form"]',
} %}
